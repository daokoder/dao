
project = DaoMake::Project( "DaoMath" ) 

daovm = DaoMake::FindPackage( "Dao", $REQUIRED )

if( daovm == none ) return

project.UseSharedLibrary( daovm, "dao" )

project_objs = project.AddObjects( { "dao_math.c" } )
project_dll  = project.AddSharedLibrary( "dao_math", project_objs )
project_lib  = project.AddStaticLibrary( "dao_math", project_objs )


project.GenerateFinder( $TRUE );
project.Install( daovm.GetPath( "MOD-PATH" ), project_dll );
project.Install( daovm.GetPath( "MOD-PATH" ), project_lib );
